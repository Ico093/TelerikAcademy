using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Kino.Classes
{
    class Ticket
    {
        public Ticket(int ticketsCount, string projectionHour, string purchaseDay, double totalPrice)
        {
            this.TicketsCount = ticketsCount;
            this.TotalPrice = totalPrice;
            this.ProjectionHour = projectionHour;
            this.PurchaseDay = purchaseDay;
        }

        private int ticketsCount;

        public int TicketsCount
        {
            get { return this.ticketsCount; }
            set { this.ticketsCount = value; }
        }

        private double totalPrice;

        public double TotalPrice
        {
            get { return this.totalPrice; }
            set { this.totalPrice = value; }
        }

        private string projectionHour;

        public string ProjectionHour
        {
            get { return this.projectionHour; }
            set { this.projectionHour = value; }
        }

        private string purcasheDay;

        public string PurchaseDay
        {
            get { return this.purcasheDay; }
            set { this.purcasheDay = value; }
        }
    }
}
